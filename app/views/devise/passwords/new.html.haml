%section#signup.signup-section
  .container
    .row
      .col-md-10.col-lg-8.mx-auto.text-center
        %i.fa.fa-paper-plane.fa-2x.mb-2.text-white
        %h1= t('.forgot_your_password')
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = bootstrap_devise_error_messages!
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
          .form-group
            = f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary'
        = render 'devise/shared/links'
