.well.results-block
  - if notice
    #notice.alert.alert-primary.alert-dismissible{role: "alert"}= notice
  - if alert
    #alert.alert.alert-danger.alert-dismissible{role: "alert"}= alert

- if @stock
  .well.results-block
    %strong Symbol:
    = @stock.ticker
    %strong Name:
    = @stock.name
    %strong Price:
    = @stock.last_price
